{{#link-to 'hostgroups' tagName="h1"}}Host Groups{{/link-to}}

({{cntFilteredHostgroups}} of {{model.length}})

{{#each error in errors.email}}
  {{error.message}}
{{/each}}

{{view Ember.TextField value=search placeholder="search" classNames="search"}}

<div class="row">

  <div {{bind-attr class="onShowPage:col-md-3:col-md-12"}}>

    <table class="table table-bordered" style='table-layout:fixed;'>
      <thead>
        <tr>
          <th>Title</th>
          {{#unless onShowPage}}
          <th>Subnet</th>
          <th>Domain</th>
          {{/unless}}
        </tr>
        </thead>

      <tbody>
      {{#each hostgroup in filteredHostgroups itemController="hostgroup"}}
        <tr>
          <td style='word-wrap:break-word;' width='100'>
            {{#link-to 'hostgroup' hostgroup}}
             {{hostgroup.title}}
            {{/link-to}}
          </td>
          {{#unless onShowPage}}
          <td> {{hostgroup.subnet_name}} </td>
          <td> {{hostgroup.domain_name}} </td>
          {{/unless}}
        </tr>
      {{else}}
        <li>No hostgroups found.</li>
      {{/each}}
      </tbody>
    </table>

    <div class="row" id="pagination"><div class="col-md-5 hidden-xs"><div class="pull-left pull-bottom darkgray pagination">Displaying <b>{{totalCount}}</b> entries</div></div></div>
  </div>

  {{#if onShowPage}}
  <div {{bind-attr class="onShowPage:col-md-9"}} style="border: 1px solid #0072a0">
    {{outlet}}
  </div>
  {{/if}}
</div>
