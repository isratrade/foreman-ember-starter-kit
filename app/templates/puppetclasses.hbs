<h1>Puppetclasses</h1>
<div class='row'>
  <div class='col-md-3'>
    <table class='table table-bordered table-hover table-striped table-two-pane'>
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
      {{#each puppetclass in model}}
      {{!#each puppetclass in model itemController="puppetclass"}}
      <tr>
        <td>
          {{#if puppetclass.isDirty}}
            {{!fa-icon 'fa-refresh' spin=true}}&nbsp;
          {{/if}}
          {{#link-to 'puppetclass' puppetclass}}{{puppetclass.name}}{{/link-to}}
        </td>
      </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
  <div class='col-md-9'>
    {{outlet}}
  </div>
</div>
