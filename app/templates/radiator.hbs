<div class='radiator_controller'>

<table class="node_summary">

  <tr class='unresponsive'>
    <td class='count'>{{reports_missing}}</td>
    <td>
      <p class="label">
        <span>Unresponsive</span>
      </p>
      <p class="percent" style="width: 40%;">
        <span>Unresponsive</span>
      </p>
    </td>
  </tr>

  <tr class='failed'>
    <td class='count'>{{out_of_sync_hosts}}</td>
    <td>
      <p class="label">
        <span>Failed</span>
      </p>
      <p class="percent" style="width: 15%">
        <span>Failed</span>
      </p>
    </td>
  </tr>

  <tr class='pending'>
    <td class='count'>{{pending_hosts_enabled}} </td>
    <td>
      <p class="label">
        <span>Pending</span>
      </p>
      <p class="percent" style="width: 20%">
        <span>Pending</span>
      </p>
    </td>
  </tr>

  <tr class='changed'>
    <td class='count'>{{active_hosts_ok_enabled}}</td>
    <td>
      <p class="label">
        <span>Changed</span>
      </p>
      <p class="percent" style="width: 20%">
        <span>Changed</span>
      </p>
    </td>
  </tr>

  <tr class='unchanged'>
    <td class='count'>{{ok_hosts_enabled}}</td>
    <td>
      <p class="label">
        <span>Unchanged</span>
      </p>
      <p class="percent" style="width: 20%;">
        <span>Unchanged</span>
      </p>
    </td>
  </tr>

  <tr class='unreported'>
    <td class='count'>{{disabled_hosts}}</td>
    <td>
      <p class="label">
        <span>Unreported</span>
      </p>
      <p class="percent" style="width: 45%;">
        <span>Unreported</span>
      </p>
    </td>
  </tr>

  <tr class='total'>
    <td class='count'>{{total_hosts}}</td>
    <td>
      <p class="label">
        <span>Total</span>
      </p>
      <p class="percent">
        <span>Total</span>
      </p>
    </td>
  </tr>

</table>
</div>
